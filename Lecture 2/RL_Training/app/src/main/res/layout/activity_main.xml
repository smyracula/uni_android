<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="RelativeLayout Sample"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/solust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="@color/red"
        android:text="SOL ÜST"
        android:gravity="center"
        android:layout_below="@+id/header"/>
    <TextView
        android:id="@+id/sagust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="@color/red"
        android:text="SAĞ ÜST"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/header"/>

    <TextView
        android:id="@+id/solorta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="@color/red"
        android:text="SOL ORTA"
        android:gravity="center"
        android:layout_below="@+id/solust"/>

    <TextView
        android:id="@+id/sagorta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="@color/red"
        android:text="SAĞ ORTA"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/solust"/>

    <TextView
        android:id="@+id/solalt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="@color/green"
        android:text="SOL ALT"
        android:gravity="center"
        android:layout_alignEnd="@+id/solorta"
        android:layout_below="@+id/solorta"/>

    <TextView
        android:id="@+id/sagalt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="@color/green"
        android:text="SAĞ ALT"
        android:gravity="center"
        android:layout_alignStart="@+id/sagorta"
        android:layout_below="@+id/sagorta"/>
</RelativeLayout>